<div class="page-wrap">

  <div class="header">
    <div class="chef"></div>
    <div class="head-wrap">
      
    </div>
  </div>

  <div class="burger-top"></div>
  <div class="burger-bottom"></div>

  <h1>Burgers!</h1>

  <h2>Burgers that have not been devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour!</button>
          </form>

        </li>
      {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">Undevour?</button>
          </form>

        </li>
      {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="burger_name">Burger Name:</label>
      <input type="text" id="burger_name" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>
